@model PagedList.IPagedList<CustomerManagement.BusinessEntities.Customer>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Customers";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create Customer", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table text-center">
    <tr>
        <th class="text-center">
            First Name
        </th>
        <th class="text-center">
            Last Name
        </th>
        <th class="text-center">
            Phone Number
        </th>
        <th class="text-center">
            Email
        </th>
        <th class="text-center">
            Total Purchases Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPurchasesAmount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, notesPage = 1, addressesPage = 1 }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
